# Change default colors
set recolor
set recolor-lightcolor \#e0def4
set recolor-darkcolor  \#181825
set recolor-keephue
set default-bg \#e0def4

# Inputbar
set inputbar-bg \#3e8948
set inputbar-fg \#191724

# Statusbar
set statusbar-bg \#191724
set statusbar-fg \#c65d77

# Change highlight
set highlight-color \#fab387
set highlight-active-color \#cba6f7 
set highlight-transparency 0.4

# Default font
set font Liberation\ Sans

set window-title-basename true
