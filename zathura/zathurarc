# Change default colors
set recolor
set recolor-lightcolor \#181825
set recolor-darkcolor  \#e0def4
set recolor-keephue
set default-bg \#181825

# Inputbar
set inputbar-bg \#191724
set inputbar-fg \#3e8948

# Statusbar
set statusbar-bg \#191724
set statusbar-fg \#c65d77

# Change highlight
set highlight-color \#fab387
set highlight-active-color \#cba6f7 
set highlight-transparency 0.4

# Default font
set font Ubuntu\ Mono\ Regular

set window-title-basename true
