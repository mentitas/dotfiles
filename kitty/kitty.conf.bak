# Configs
mouse_hide_wait 3.0
url_style dashed

font_family Caskaydia Mono NerdFont
font_size 11

# Para habilitar Preview_tui en
allow_remote_control yes
listen_on unix:/var/tmp/kitty
enabled_layouts all

# Shortcuts
map ctrl+c copy_or_interrupt
map ctrl+v paste_from_clipboard
map ctrl+h new_window
map ctrl+t new_tab
map ctrl+w close_tab
map alt+right next_tab
map alt+left previous_tab
map ctrl+space next_layout

map ctrl+f launch --type=overlay --stdin-source=@screen_scrollback /usr/bin/fzf --no-sort --no-mouse --exact -i


# BEGIN_KITTY_THEME
# Cherry
include current-theme.conf
# END_KITTY_THEME