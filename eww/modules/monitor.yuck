;; When conected to a monitor, mirror display (true) or extend display (false)
(defvar mirror false)

(defwidget monitor[]
  (button :onclick "eww update mirror=${!mirror} &&
                    ${mirror ? "./scripts/monitor" : "./scripts/tv"}" 
    (image :path "${mirror ? "./icons/both-themes/monitor.png" : "./icons/both-themes/tv.png"}")
  )
)
